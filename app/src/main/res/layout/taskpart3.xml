<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@sampledata/avatar"
        />


    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="@sampledata/posts.json/data/author"
        />
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/authorTextView"
        tools:text="@sampledata/posts.json/data/published"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/white"
        android:textColorLink="@color/black"
        app:icon="@drawable/ic_baseline_zoom_out_map_24"
        app:iconTint="#0B0A0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/Barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageView"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/Barrier"
        tools:layout_editor_absoluteX="0dp"
        tools:text="@sampledata/posts.json/data/about" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/Barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="aboutTextView"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/likedsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/starLoveImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/repostImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
        app:srcCompat="@android:drawable/ic_menu_share"
        tools:layout_editor_absoluteX="166dp" />

    <ImageView
        android:id="@+id/seeImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
        app:srcCompat="@android:drawable/checkbox_on_background"
        tools:layout_editor_absoluteX="297dp" />

    <TextView
        android:id="@+id/starTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="10"
        app:layout_constraintEnd_toStartOf="@+id/repostImageView"
        app:layout_constraintStart_toEndOf="@+id/starLoveImageView"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView" />

    <TextView
        android:id="@+id/repostTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="15K"
        app:layout_constraintEnd_toStartOf="@+id/seeImageView"
        app:layout_constraintStart_toEndOf="@+id/repostImageView"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView" />

    <TextView
        android:id="@+id/seeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="3M"
        app:layout_constraintStart_toEndOf="@+id/seeImageView"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>